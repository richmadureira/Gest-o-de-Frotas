@startuml Diagrama_Caso_Uso_Gestao_Frotas_Atualizado
!theme plain
skinparam usecase {
    BackgroundColor #E1F5FE
    BorderColor #01579B
    FontSize 10
}
skinparam actor {
    BackgroundColor #FFFFFF
    BorderColor #000000
    FontSize 11
    FontStyle bold
}
skinparam package {
    BackgroundColor #F5F5F5
    BorderColor #424242
    FontColor #212121
    FontSize 10
    FontStyle bold
}
skinparam note {
    BackgroundColor #FFFDE7
    BorderColor #FFB300
    FontColor #424242
    FontSize 9
}

title Figura 1 – Diagrama de Caso de Uso Geral\nSistema de Gestão de Frotas (Versão Atualizada)

left to right direction

actor Administrador as admin
actor "Gestor de Frota" as gestor
actor Condutor as condutor

package "Sistema de Gestão de Frotas" {

    package "Autenticação e Perfil" #E8F5E9 {
        usecase "Login" as UC01
        usecase "Logout" as UC02
        usecase "Recuperar Senha" as UC03
        usecase "Trocar Senha" as UC04

        UC04 ..> UC01 : <<extend>>\n(obrigatório no\nprimeiro login)
        UC03 ..> UC01 : <<extend>>
    }

    package "Gestão de Checklists" #E3F2FD {
        usecase "Preencher Checklist\nDiário" as UC05
        usecase "Enviar Fotos\nde Avarias" as UC06
        usecase "Visualizar Checklists\nEnviados" as UC07
        usecase "Gerenciar Checklists" as UC08

        UC05 ..> UC06 : <<extend>>\n(opcional)

        note right of UC05
            Condutor pode enviar múltiplos
            checklists por dia (um por veículo)
        end note
    }

    package "Gestão de Usuários" #FFF3E0 {
        usecase "Gerenciar Usuários\ne Permissões" as UC09
        usecase "Gerenciar Condutores" as UC10

        note right of UC09
            Apenas Administrador
            pode excluir usuários
        end note
    }

    package "Gestão de Veículos" #F3E5F5 {
        usecase "Gerenciar Veículos" as UC11
        usecase "Visualizar Histórico\nde Veículos" as UC12

        note right of UC11
            Administrador pode excluir veículos.
            Gestor apenas visualiza e edita.
        end note
    }

    package "Gestão de Manutenções" #FFEBEE {
        usecase "Gerenciar Manutenções" as UC13

        note right of UC13
            Administrador pode excluir manutenções.
            Gestor apenas gerencia status e edita.
        end note
    }

    package "Monitoramento e Auditoria" #E0F2F1 {
        usecase "Visualizar Dashboard" as UC14
        usecase "Visualizar Logs\nde Auditoria" as UC15

        note right of UC15
            Acesso exclusivo
            do Administrador
        end note
    }
}

